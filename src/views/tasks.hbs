<a href="/" class="btn btn-primary mt-2 col-md-4 offset-md-8" role="button">Create Task</a>

<h3 class="text-center my-4">List Tasks</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Task Name</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">Edit</th>
      <th scope="col">remove</th>
    </tr>
  </thead>
  <tbody>
      {{#each tasks}}
    <tr>
      <th scope="row"></th>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        <div>
          <form action="/status/{{_id}}" method="POST">
          {{#if status}}
            <input class="form-check-input" type="checkbox" id="{{_id}}" name="statuscheck" onChange="this.form.submit()" aria-label="..." checked>
          {{else}}
            <input class="form-check-input" type="checkbox" id="{{_id}}" name="statuscheck" onChange="this.form.submit()" aria-label="...">
          {{/if}}
          </form>
          </div>
      </td>    
      <td><a href="/tasks/edit/{{_id}}"><i class="fas fa-edit"></i></a></td>
      <td><a href="/tasks/delete/{{_id}}?_method=DELETE"><i class="fas fa-trash-alt"></i> </a></td>     
    </tr>
    {{/each}} 
    </tbody>
</table>