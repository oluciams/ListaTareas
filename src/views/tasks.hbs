<div class="my-2 offset-md-10">
  <a href="/logout"><i class="fas fa-sign-out-alt"> Logout</i></a>    
</div>

<h3 class="text-center my-4">List Tasks</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Task Name</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">Edit</th>
      <th scope="col">remove</th>
    </tr>
  </thead>
  <tbody>
      {{#each tasks}}
    <tr>
      <th scope="row"></th>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        <div>
        <input class="form-check-input" type="checkbox" id="{{status}}" value="true" aria-label="...">
        </div>
      </td>    
      <td><a href="/tasks/edit/{{_id}}"><i class="fas fa-edit"></i></a></td>
      <td><a href="/tasks/delete/{{_id}}?_method=DELETE"><i class="fas fa-trash-alt"></i> </a></td>     
    </tr>
    {{/each}} 
    </tbody>
</table>